{
  "name": "admin-panel-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@admin-panel/api",
    "dev:web": "turbo run dev --filter=@admin-panel/web",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "db:generate": "pnpm --filter @admin-panel/api prisma generate",
    "db:migrate": "pnpm --filter @admin-panel/api prisma migrate dev",
    "db:push": "pnpm --filter @admin-panel/api prisma db push"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "dependencies": {
    "@invistto/auth-react": "file:../invistto-auth/packages/react"
  }
}
